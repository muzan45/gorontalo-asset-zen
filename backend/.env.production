# Production Environment Configuration
# SISTEM INVENTARIS BKN GORONTALO

# Server Configuration
NODE_ENV=production
PORT=5000
API_VERSION=v1

# Database Configuration
# GANTI DENGAN KONFIGURASI DATABASE ANDA
DB_HOST=localhost
DB_PORT=3306
DB_NAME=inventaris_bkn
DB_USER=inventaris_user
DB_PASSWORD=GANTI_PASSWORD_INI

# JWT Configuration
# GANTI dengan secret key yang kuat untuk production!
JWT_SECRET=GANTI_DENGAN_SECRET_KEY_YANG_SANGAT_AMAN_DAN_PANJANG_MINIMAL_64_KARAKTER
JWT_EXPIRE=7d
JWT_REFRESH_EXPIRE=30d

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# CORS Configuration
# GANTI dengan IP server NAS/Production Anda
CORS_ORIGIN=http://192.168.1.100:3000,http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info

# Security
SESSION_SECRET=GANTI_DENGAN_SESSION_SECRET_YANG_AMAN

# Email Configuration (Optional - untuk notifikasi)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
EMAIL_FROM=noreply@bkn.go.id